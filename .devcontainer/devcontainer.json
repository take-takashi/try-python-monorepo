{
  "name": "codespaces-with-mise",
  // ImageはGithubデフォルトのものを使う
  // 最初のコンテナ作成時に一回だけ実行される
  "onCreateCommand": "curl https://mise.run | sh",
  "customizations": {
    "vscode": {
      "settings": {
        // お好みで
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python"
      ]
    }
  }
}