{
  "name": "codespaces-with-mise",
  // ほぼ GitHub デフォルト環境
  "image": "mcr.microsoft.com/devcontainers/universal:2",

  // 最初のコンテナ作成時に一回だけ実行される
  "onCreateCommand": "curl https://mise.run | sh",

  "customizations": {
    "vscode": {
      "settings": {
        // お好みで
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
      ]
    }
  }
}
